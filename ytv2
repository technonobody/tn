<script>
  function playVideo() {
    const url = document.getElementById("link").value.trim();
    const match = url.match(/(?:v=|youtu\.be\/|\/live\/)([a-zA-Z0-9_-]{11})/);
    const videoId = match ? match[1] : null;
    if (!videoId) {
      alert("Please enter a valid YouTube video URL");
      return;
    }

    
    document.getElementById("loading").style.display = 'block';

    setTimeout(() => {
      const playerUrl = `player.php?id=${videoId}`;
      const streamUrl = `stream.php?video_id=${videoId}&e=.m3u8`;

      
      const baseUrl = window.location.origin + window.location.pathname.replace(/index\.php$/, '');

      
      document.getElementById("ytFrame").src = playerUrl + "&autoplay=1";
      document.getElementById("playerLinkText").value = baseUrl + playerUrl;
      document.getElementById("embedLinkText").value = `<iframe src="${baseUrl+playerUrl}" width="560" height="315" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>`;
      document.getElementById("streamLinkText").value = baseUrl + streamUrl;

      
      document.getElementById("playerBox").style.display = 'block';
      document.getElementById("loading").style.display = 'none';

      
      document.getElementById("playerBox").scrollIntoView({ behavior: 'smooth' });
    }, 100);
  }

  function copyLink() {
    navigator.clipboard.writeText(document.getElementById("playerLinkText").value);
    alert("Player link copied!");
  }

  function copyEmbed() {
    navigator.clipboard.writeText(document.getElementById("embedLinkText").value);
    alert("Embed code copied!");
  }

  function copyStream() {
    navigator.clipboard.writeText(document.getElementById("streamLinkText").value);
    alert("Stream link copied!");
  }

  function addExample() {
    document.getElementById("link").value = "https://www.youtube.com/live/dXIyMS61B68?si=GvJreFsSCk0WvC6X";
  }
</script>
